# Telegram API credentials (get from https://my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Session file path (will be created on first auth)
TELETHON_SESSION_PATH=./telegram_session

# Target chat to monitor (can be chat ID, username, or invite link)
TARGET_CHAT_ID=-1001234567890

# Database configuration
# For Docker deployment: Set POSTGRES_PASSWORD below, DB_URL is auto-configured
# For local PostgreSQL: postgresql://user:password@localhost:5432/dbname?sslmode=disable
# For SQLite (development only): sqlite:///./telegram_analysis.db
# DB_URL=postgresql://telegram_user:your_password@localhost:5432/telegram_analysis?sslmode=disable

# PostgreSQL password (required for Docker)
POSTGRES_PASSWORD=your_secure_password_change_me

# Ingestion settings
OVERLAP_MINUTES=120
BATCH_SIZE=100
RATE_LIMIT_DELAY=1.0

# Analysis settings
MODEL_VERSION=1
CONFIDENCE_THRESHOLD=0.7

# Bot settings (optional - for admin commands)
BOT_TOKEN=your_bot_token_here
ADMIN_USER_IDS=123456789,987654321

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/telegram_analysis.log
